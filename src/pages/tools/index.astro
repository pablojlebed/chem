---
import BaseLayout from "@layouts/BaseLayout.astro";

const tools = [
  {
    title: "SPC Calculator & Chart",
    description:
      "Calculate and visualize statistical process control (SPC) data with X-bar and R charts.",
    href: "/tools/spc-calculator",
    image: "/images/spc-tool-banner.png",
  },
  // Add new tools here in the future:
  {
    title: "ICP-MS QQQ Simulator",
    description: "Interference management using triple-quadrupole ICP-MS.",
    href: "https://icpms-sim.thelabguy.org",
    image: "/images/icpms-tool-banner.png",
  },
];

const title = "Collection of Engineering Tools";
const description =
  "A variety of interactive tools for quality control, statistics, and engineering calculations.";
---

<BaseLayout title={title} description={description}>
  <section class="max-w-4xl mx-auto py-12 md:py-16 px-4">
    <div class="mb-12 text-center">
      <h1
        class="text-4xl md:text-5xl font-bold mb-6 pb-4 border-b border-tron-red/30 inline-block text-tron-red tracking-wider drop-shadow-md"
      >
        Engineering Tools
      </h1>
      <p
        class="text-xl text-tron-cyan font-light max-w-2xl mx-auto leading-relaxed"
      >
        {description}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        tools.map((tool) => (
          <a
            href={tool.href}
            class="group block p-8 rounded-2xl bg-tron-dark-200/40 backdrop-blur-sm border border-tron-red/20 hover:border-tron-red/60 hover:bg-tron-dark-200/60 transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_0_20px_rgba(255,0,51,0.15)] relative overflow-hidden"
          >
            {/* Corner decorations */}
            <div class="absolute top-0 right-0 p-2 opacity-30 group-hover:opacity-100 transition-opacity">
              <div class="w-2 h-2 bg-tron-red rounded-full shadow-[0_0_5px_rgba(255,0,51,1)]" />
            </div>

            <div class="-mx-8 -mt-8 mb-8 overflow-hidden border-b border-tron-red/20 shadow-lg group-hover:shadow-[0_0_15px_rgba(255,0,51,0.3)] transition-all duration-300">
              <img
                src={tool.image}
                alt={`${tool.title} icon`}
                class="w-full h-56 object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            <h3 class="text-2xl font-bold text-tron-red mb-3 group-hover:text-white transition-colors tracking-wide">
              {tool.title}
            </h3>
            <p class="text-tron-cyan text-lg leading-relaxed group-hover:text-white transition-colors">
              {tool.description}
            </p>

            {/* Bottom highlight line */}
            <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-tron-red/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-center" />
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
