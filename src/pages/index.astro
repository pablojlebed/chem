---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <section
    class="flex flex-col md:flex-row items-center justify-start min-h-[calc(100vh-180px)] pt-8 pb-12 md:pt-16 md:pb-24"
  >
    {/* Adjusted top padding, kept bottom padding for balance */}
    <div class="md:w-1/2 text-center md:text-left p-4">
      <h1
        class="text-5xl md:text-6xl font-bold leading-tight mb-4 text-gray-900"
      >
        {/* Use font-bold and gray-900 */}
        Freelance Analytical Chemist helping complex chemical data into clarity and
        confidence.
      </h1>
      <p class="text-lg md:text-xl text-gray-700 mb-8 max-w-xl md:mx-0 mx-auto">
        I specialize in method development, data interpretation,
        problem-solving, and quality management in analytical labs across
        Europe, ensuring reliable and compliant results.
      </p>
      <a
        href="/contact"
        class="inline-block bg-primary-blue hover:bg-primary-blue-dark text-white font-semibold py-3 px-8 rounded-md shadow-medium transition-colors duration-300"
      >
        {/* Use primary-blue */}
        Work with me
      </a>
    </div>
    <div class="md:w-1/2 p-4 mt-8 md:mt-0 flex justify-center">
      <img
        src="/images/profile.jpg"
        {/* Adjust path if needed */}
        alt="Pablo Lebed"
        class="w-64 h-64 md:w-80 md:h-80 rounded-full object-cover shadow-medium"
      />
    </div>
  </section>
</BaseLayout>
