---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <section
    class="flex flex-col md:flex-row items-center justify-start min-h-[calc(100vh-180px)] pt-8 pb-12 md:pt-16 md:pb-24"
    aria-labelledby="hero-heading"
  >
    <div class="md:w-1/2 text-center md:text-left p-4">
      <h1
        id="hero-heading"
        class="text-5xl md:text-6xl font-bold leading-tight mb-4 text-gray-900"
      >
        Freelance Analytical Chemist
      </h1>
      <p class="text-lg md:text-xl text-gray-700 mb-8 max-w-xl md:mx-0 mx-auto">
        I partner with European labs to achieve peak performance. I leverage my expertise in spectrometry and chromatography to develop robust methods, interpret complex data, and implement quality management systems that deliver reliable and compliant results.
      </p>
      <a
        href="/contact"
        class="inline-block bg-primary-blue hover:bg-primary-blue-dark !text-white px-6 py-3 rounded-md font-semibold transition-colors duration-200 shadow-medium"
        aria-label="Work with Pablo Lebed, contact for freelance analytical chemistry services"
      >
        Work with me
      </a>
    </div>
    <div class="md:w-1/2 p-4 mt-8 md:mt-0 flex justify-center">
      <img
        src="/images/profile.png"
        alt="Portrait of Pablo Lebed, an analytical chemist specializing in data interpretation and quality management."
        class="w-64 h-64 md:w-80 md:h-80 rounded-full object-cover shadow-medium"
      />
    </div>
  </section>
</BaseLayout>