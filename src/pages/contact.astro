---
// src/pages/contact.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact – Pablo Lebed">
  <section class="max-w-3xl mx-auto py-12 md:py-16 px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 pb-2 border-b border-gray-200">
      Get in Touch
    </h1>
    <p class="mb-6 text-lg text-gray-700 max-w-2xl">
      Interested in working together? Fill out the form below or email me at
      <a
        href="mailto:contact@thelabguy.org"
        aria-label="Send an email to contact@thelabguy.org"
        class="text-primary-blue hover:text-primary-blue-dark hover:underline transition-colors duration-200"
      >
        contact@thelabguy.org
      </a>.
    </p>

    <form
      name="contact"
      method="POST"
      action="/thank-you"
      data-netlify="true"
      netlify-honeypot="bot-field"
      aria-label="Contact Form"
      class="max-w-lg mx-auto space-y-6 mt-8"
    >
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>Don’t fill this out if you're human: <input name="bot-field" /></label>
      </p>

      <label class="block">
        <span class="text-gray-800 font-semibold mb-2 block">Name</span>
        <input
          type="text"
          name="name"
          required
          class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:border-primary-blue focus:ring focus:ring-primary-blue-light focus:ring-opacity-50 outline-none text-gray-900"
          placeholder="Your full name"
        />
      </label>

      <label class="block">
        <span class="text-gray-800 font-semibold mb-2 block">Email</span>
        <input
          type="email"
          name="email"
          required
          class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:border-primary-blue focus:ring focus:ring-primary-blue-light focus:ring-opacity-50 outline-none text-gray-900"
          placeholder="your.email@example.com"
        />
      </label>

      <label class="block">
        <span class="text-gray-800 font-semibold mb-2 block">Message</span>
        <textarea
          name="message"
          rows="5"
          required
          class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:border-primary-blue focus:ring focus:ring-primary-blue-light focus:ring-opacity-50 outline-none text-gray-900"
          placeholder="Write your message here..."
        ></textarea>
      </label>

      <button
        type="submit"
        class="inline-block mt-6 bg-primary-blue hover:bg-primary-blue-dark text-white px-6 py-3 rounded-md font-semibold transition-colors duration-200 shadow-medium"
        aria-label="Send message"
      >
        Send Message
      </button>
    </form>
  </section>
</BaseLayout>
