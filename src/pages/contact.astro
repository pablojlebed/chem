---
// src/pages/contact.astro
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Contact – Pablo Lebed">
  <section class="max-w-3xl mx-auto py-12 md:py-16 px-4">
    <h1
      class="text-4xl md:text-5xl font-bold mb-6 pb-2 border-b border-tron-red/20"
    >
      Get in Touch
    </h1>
    <p class="mb-6 text-lg max-w-2xl">
      Interested in working together? Fill out the form below or email me at
      <a
        href="mailto:contact@thelabguy.org"
        aria-label="Send an email to contact@thelabguy.org"
        class="text-tron-red hover:text-white hover:underline transition-colors duration-200"
      >
        contact@thelabguy.org
      </a>.
    </p>

    <form
      name="contact"
      method="POST"
      action="/thank-you"
      data-netlify="true"
      netlify-honeypot="bot-field"
      aria-label="Contact Form"
      class="max-w-lg mx-auto space-y-6 mt-8"
    >
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label
          >Don’t fill this out if you're human: <input
            name="bot-field"
          /></label
        >
      </p>

      <label class="block">
        <span class="text-tron-cyan font-semibold mb-2 block">Name</span>
        <input
          type="text"
          name="name"
          required
          class="mt-1 block w-full rounded-md border border-tron-cyan/30 bg-tron-dark-200/50 px-3 py-2 text-tron-cyan placeholder-tron-cyan/50 focus:border-tron-red focus:ring focus:ring-tron-red/20 focus:ring-opacity-50 outline-none"
          placeholder="Your full name"
        />
      </label>

      <label class="block">
        <span class="text-tron-cyan font-semibold mb-2 block">Email</span>
        <input
          type="email"
          name="email"
          required
          class="mt-1 block w-full rounded-md border border-tron-cyan/30 bg-tron-dark-200/50 px-3 py-2 text-tron-cyan placeholder-tron-cyan/50 focus:border-tron-red focus:ring focus:ring-tron-red/20 focus:ring-opacity-50 outline-none"
          placeholder="your.email@example.com"
        />
      </label>

      <label class="block">
        <span class="text-tron-cyan font-semibold mb-2 block">Message</span>
        <textarea
          name="message"
          rows="5"
          required
          class="mt-1 block w-full rounded-md border border-tron-cyan/30 bg-tron-dark-200/50 px-3 py-2 text-tron-cyan placeholder-tron-cyan/50 focus:border-tron-red focus:ring focus:ring-tron-red/20 focus:ring-opacity-50 outline-none"
          placeholder="Write your message here..."></textarea>
      </label>

      <button
        type="submit"
        class="inline-block mt-6 bg-tron-red/80 hover:bg-tron-red text-white px-6 py-3 rounded-md font-semibold transition-colors duration-200 shadow-[0_0_10px_rgba(255,0,51,0.4)] hover:shadow-[0_0_15px_rgba(255,0,51,0.6)]"
        aria-label="Send message"
      >
        Send Message
      </button>
    </form>
  </section>
</BaseLayout>
