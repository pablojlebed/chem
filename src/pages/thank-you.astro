---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Thank You – Pablo Lebed">
  <section class="max-w-3xl mx-auto py-16 px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6">Thank You!</h1>
    <p class="text-lg mb-4">
      Your message has been sent. I’ll get back to you as soon as possible.
    </p>
    <a
      href="/"
      class="inline-block mt-6 bg-tron-red/80 hover:bg-tron-red text-white px-6 py-3 rounded-md font-semibold transition-colors duration-200 shadow-[0_0_10px_rgba(255,0,51,0.4)] hover:shadow-[0_0_15px_rgba(255,0,51,0.6)]"
    >
      Back to Home
    </a>
  </section>
</BaseLayout>
