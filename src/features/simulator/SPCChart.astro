        const lclXBarEl = document.getElementById("lcl_x_bar");
        if (lclXBarEl) lclXBarEl.textContent = Math.max(0, lclXBar).toFixed(4);

        const clREl = document.getElementById("cl_r");
        if (clREl) clREl.textContent = averageR.toFixed(4);

        const uclREl = document.getElementById("ucl_r");
        if (uclREl) uclREl.textContent = uclR.toFixed(4);

        const lclREl = document.getElementById("lcl_r");
        if (lclREl) lclREl.textContent = Math.max(0, lclR).toFixed(4);

        const nValEl = document.getElementById("n_val");
        if (nValEl) nValEl.textContent = subgroupSize.toString();

        const grandXBarValEl = document.getElementById("grand_x_bar_val");
        if (grandXBarValEl) grandXBarValEl.textContent = grandXBar.toFixed(4);

        const averageRValEl = document.getElementById("average_r_val");
        if (averageRValEl) averageRValEl.textContent = averageR.toFixed(4);

        const a2ValEl = document.getElementById("a2_val");
        if (a2ValEl) a2ValEl.textContent = A2.toFixed(3);

        const d3ValEl = document.getElementById("d3_val");
        if (d3ValEl) d3ValEl.textContent = D3.toFixed(3);

        const d4ValEl = document.getElementById("d4_val");
        if (d4ValEl) d4ValEl.textContent = D4.toFixed(3);

        // 8. Generate Data Table
        generateDataTable(allSubgroupData, subgroupSize);

        // 9. Generate Charts
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = "#00F0FF"; // Tron Cyan for default text
        Chart.defaults.borderColor = "rgba(255, 255, 255, 0.1)"; // Dark grid lines

        // --- X-Bar Chart ---
        // --- X-Bar Chart ---
        const xBarChartElement = document.getElementById(
          "xBarChart",
        ) as HTMLCanvasElement;

        if (!xBarChartElement) {
          window.displayError("X-bar chart element not found.");
          return;
        }

        const ctxXBar = xBarChartElement.getContext("2d");
        if (xBarChartInstance) xBarChartInstance.destroy();

        if (ctxXBar) {
          xBarChartInstance = new Chart(ctxXBar, {
            type: "line",
            data: {
              labels: labels,
              datasets: [
                {
                  label: "X-bar",
                  data: xBarValues,
                  borderColor: "#00F0FF", // Tron Cyan
                  backgroundColor: "rgba(0, 240, 255, 0.1)",
                  borderWidth: 2,
                  pointRadius: 4,
                  pointBackgroundColor: "white",
                  pointBorderColor: "#00F0FF",
                  pointBorderWidth: 2,
                  tension: 0.1,
                  fill: false,
                },
                {
                  label: "Center Line (CL)",
                  data: clXBarData,
                  borderColor: "#ffffff", // White
                  borderWidth: 2,
                  borderDash: [5, 5],
                  pointRadius: 0,
                  tension: 0,
                  fill: false,
                },
                {
                  label: "UCL",
                  data: uclXBarData,
                  borderColor: "#FF0033", // Tron Red
                  borderWidth: 1.5,
                  pointRadius: 0,
                  tension: 0,
                  fill: false,
                },
                {
                  label: "LCL",
                  data: lclXBarData,
                  borderColor: "#FF0033", // Tron Red
                  borderWidth: 1.5,
                  pointRadius: 0,
                  tension: 0,
                  fill: false,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              interaction: {
                mode: "index",
                intersect: false,
              },
              scales: {
                y: {
                  title: { display: false },
                  grid: { color: "rgba(255, 255, 255, 0.1)" },
                  ticks: { color: "#00F0FF" },
                },
                x: {
                  grid: { display: false },
                  ticks: { color: "#00F0FF" },
                },
              },
              plugins: {
                legend: {
                  position: "top",
                  labels: {
                    usePointStyle: true,
                    boxWidth: 6,
                    color: "#00F0FF",
                  },
                },
              },
            },
          });
        }

        // --- R Chart ---
        const rChartElement = document.getElementById(
          "rChart",
        ) as HTMLCanvasElement;
        if (!rChartElement) {
          window.displayError("Range chart element not found.");
          return;
        }
        const ctxR = rChartElement.getContext("2d");
        if (rChartInstance) rChartInstance.destroy();
        rChartInstance = new Chart(ctxR, {
          type: "line",
          data: {
            labels: labels,
            datasets: [
              {
                label: "Range (R)",
                data: rValues,
                borderColor: "#00F0FF", // Tron Cyan
                backgroundColor: "rgba(0, 240, 255, 0.1)",
                borderWidth: 2,
                pointRadius: 4,
                pointBackgroundColor: "white",
                pointBorderColor: "#00F0FF",
                pointBorderWidth: 2,
                tension: 0.1,
                fill: false,
              },
              {
                label: "Center Line (CL)",
                data: clRData,
                borderColor: "#ffffff",
                borderWidth: 2,
                borderDash: [5, 5],
                pointRadius: 0,
                tension: 0,
                fill: false,
              },
              {
                label: "UCL",
                data: uclRData,
                borderColor: "#FF0033",
                borderWidth: 1.5,
                pointRadius: 0,
                tension: 0,
                fill: false,
              },
              {
                label: "LCL",
                data: lclRData,
                borderColor: "#FF0033",
                borderWidth: 1.5,
                pointRadius: 0,
                tension: 0,
                fill: false,
