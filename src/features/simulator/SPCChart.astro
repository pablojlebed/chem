            plugins: {
              legend: {
                position: "top",
                labels: { usePointStyle: true, boxWidth: 6, color: "#00F0FF" },
              },
            },
          },
        });
      } catch (e: any) {
        console.error(e);
        window.displayError(
          "An unexpected error occurred during calculation. Check your data format. Error: " +
            e.message,
        );
      }
    };

    // --- 2. Helper Functions (Internal to IIFE) ---

    /** Renders the input grid table. */
    function renderInputGrid() {
      const header = document.getElementById("inputGridHeader");
      const body = document.getElementById("inputGridBody");
      if (!header || !body) return;
      header.innerHTML =
        '<th class="sticky top-0 bg-tron-dark-200 px-2 py-3 text-center text-xs font-semibold text-tron-red w-[70px] border-b border-tron-red/20 border-r border-tron-red/20">S.G.</th>';
      body.innerHTML = "";

      // 1. Render Columns (X1, X2, ...)
      for (let j = 0; j < numCols; j++) {
        const th = document.createElement("th");
        th.className =
          "sticky top-0 bg-tron-dark-200 px-2 py-3 text-center text-xs font-semibold text-tron-red min-w-[70px] border-b border-tron-red/20";
        th.textContent = `X${j + 1}`;
        header.appendChild(th);
      }

      // 2. Render Rows
      for (let i = 0; i < numRows; i++) {
        const tr = document.createElement("tr");
        tr.className = "hover:bg-tron-red/5 transition-colors duration-150";

        // Subgroup label cell
        const tdLabel = document.createElement("td");
        tdLabel.className =
          "bg-tron-dark-200 sticky left-0 text-sm text-center border-r border-tron-red/20 text-tron-cyan/70 font-mono py-2";
        tdLabel.textContent = (i + 1).toString();
        tr.appendChild(tdLabel);

        // Data input cells
        for (let j = 0; j < numCols; j++) {
          const td = document.createElement("td");
          td.className =
            "min-w-[70px] bg-tron-dark-200 border-r border-b border-tron-red/10 p-0";

          const input = document.createElement("input");
          input.type = "text";
          input.inputMode = "decimal";
          input.className =
            "data-input-cell text-sm text-tron-cyan w-full h-full bg-transparent border-none focus:outline-none focus:ring-1 focus:ring-tron-cyan py-3 text-center";
          input.id = `input-${i}-${j}`;
          input.setAttribute("data-row", String(i));
          input.setAttribute("data-col", String(j));

          // Add custom paste handler to the first cell for spreadsheet data ingestion
          if (i === 0 && j === 0) {
            input.addEventListener("paste", handleSpreadsheetPaste);
          }
          td.appendChild(input);
          tr.appendChild(td);
        }
        body.appendChild(tr);
      }
      // Update N display
      const nValInput = document.getElementById("n_val_input");
      if (nValInput) nValInput.textContent = numCols.toString();
    }

    /** Handles pasting data from a spreadsheet into the first cell. */
    function handleSpreadsheetPaste(event: ClipboardEvent) {
      // Prevent default behavior (pasting all data into one cell)
      event.preventDefault();

      // Get clipboard data
      // Get clipboard data
      const clipboardData = event.clipboardData;
      if (!clipboardData) return;
      const pastedText = clipboardData.getData("Text");

      // Split into rows (by newline) and then columns (by tab, comma, or space)
      const rows = pastedText.trim().split(/\r\n|\n|\r/);
      const parsedData = rows.map((row: string) =>
        row.split(/\t|,|\s+/).map((val) => val.trim()),
      );

      if (parsedData.length === 0 || parsedData[0].length === 0) return;

      // Determine dimensions of pasted data
      const pastedRows = parsedData.length;
      const pastedCols = Math.max(
        ...parsedData.map((row: string[]) => row.length),
      );

      // Dynamically add rows and columns if necessary
      if (pastedRows > numRows) window.addRow(pastedRows - numRows);
      if (pastedCols > numCols) window.addColumn(pastedCols - numCols);

      // Insert data into the grid starting at (0, 0)
      const targetElement = event.target as HTMLInputElement;
      for (let i = 0; i < parsedData.length; i++) {
        for (let j = 0; j < parsedData[i].length; j++) {
          const value = parsedData[i][j];
          if (value !== "") {
            const targetRow =
              parseInt(targetElement.getAttribute("data-row") || "0") + i;
            const targetCol =
              parseInt(targetElement.getAttribute("data-col") || "0") + j;
            const targetInput = document.getElementById(
              `input-${targetRow}-${targetCol}`,
            );

            if (targetInput) {
              (targetInput as HTMLInputElement).value = value;
            }
          }
        }
      }

      // Calculate charts immediately after paste
      window.calculateAndChart();
    }

    /** Generates and injects the HTML table displaying subgroup data, X-bar, and Range. */
    function generateDataTable(
      data: Array<{ rawValues: number[]; xBar: number; range: number }>,
      n: number,
    ) {
      const tableContainer = document.getElementById("dataDisplayTable");
      if (!tableContainer) return;
      tableContainer.innerHTML = "";

      if (data.length === 0) return;

      let tableHtml = `
                <div class="p-8 bg-tron-dark-200/40 backdrop-blur-sm rounded-xl border border-tron-red/20 shadow-[0_0_15px_rgba(255,0,51,0.1)]">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-xl font-bold text-tron-red">Calculated Data Table</h2>
                        <button onclick="copyDataTable()" id="copyDataBtn" title="Copy Data" class="icon-button">
                            <!-- Copy Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 4h4m-4 0v4m4-4V8m-8 8v-4m-4 4v-4m4 4h4m-4 0v4m4-4V8" />
                            </svg>
                        </button>
                    </div>
                    <div class="overflow-x-auto rounded-lg border border-tron-red/20 shadow-[0_0_15px_rgba(255,0,51,0.1)]">
                        <table class="min-w-full divide-y divide-tron-red/20">
                            <thead class="bg-tron-dark-200">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-tron-cyan/70 uppercase tracking-wider w-1/12 border-b border-tron-red/20">Subgroup</th>
            `;

      // Add columns for individual measurements (X1, X2, ...)
      for (let i = 1; i <= n; i++) {
        tableHtml += `<th class="px-4 py-3 text-center text-xs font-medium text-tron-cyan/70 uppercase tracking-wider border-b border-tron-red/20">X${i}</th>`;
      }

      // Add columns for calculated values
      tableHtml += `
                                <th class="px-4 py-3 text-center text-xs font-medium text-yellow-500 uppercase tracking-wider bg-yellow-900/10 border-b border-tron-red/20">X-bar</th>
                                <th class="px-4 py-3 text-center text-xs font-medium text-purple-500 uppercase tracking-wider bg-purple-900/10 border-b border-tron-red/20">Range (R)</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-tron-red/20 bg-tron-dark-200">
            `;

      // Add rows for data
      data.forEach((item, index) => {
        tableHtml += `
                    <tr class="hover:bg-tron-red/5 transition-colors">
                        <td class="px-4 py-2 whitespace-nowrap text-sm font-semibold text-tron-cyan text-left">${index + 1}</td>
                `;
        // Raw values
        for (let i = 0; i < n; i++) {
          const displayValue = !isNaN(item.rawValues[i])
            ? item.rawValues[i].toFixed(4)
            : "";
          tableHtml += `<td class="px-4 py-2 whitespace-nowrap text-sm text-tron-cyan text-center font-mono">${displayValue}</td>`;
        }

        // Calculated values
        tableHtml += `
                    <td class="px-4 py-2 whitespace-nowrap text-sm font-bold text-yellow-500 text-center bg-yellow-900/10 font-mono">${item.xBar.toFixed(4)}</td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm font-bold text-purple-400 text-center bg-purple-900/10 font-mono">${item.range.toFixed(4)}</td>
                </tr>
                `;
      });

      tableHtml += `
                        </tbody>
                    </table>
                </div>
            </div>
            `;

      tableContainer.innerHTML = tableHtml;
    }

    // --- 3. Initialization ---
    // Since we use client:load, the DOM should be ready enough to render the grid immediately.
    renderInputGrid();
  })();
