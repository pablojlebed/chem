            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              y: {
                min: 0,
                grid: { color: "rgba(255, 255, 255, 0.1)" },
                ticks: { color: "#00F0FF" },
              },
              x: { grid: { display: false }, ticks: { color: "#00F0FF" } },
