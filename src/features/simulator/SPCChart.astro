<!-- 
    This is the client-side component structure. 
    It includes all necessary HTML, styling, and client-side JavaScript.
    The 'client:load' directive is required on the SPCChart component tag in your Astro page.
-->
<div class="astro-component-container">
  <!-- Load Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"
  ></script>

  <style>
    /* Custom scrollbar for the table */
    #dataInputContainer::-webkit-scrollbar {
      height: 8px;
      width: 8px;
    }
    #dataInputContainer::-webkit-scrollbar-track {
      background: #0a0a0f;
    }
    #dataInputContainer::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 4px;
    }
    #dataInputContainer::-webkit-scrollbar-thumb:hover {
      background: #ff0033;
    }

    /* Input Grid Overrides for Dark Mode */
    #inputGrid td {
      border-color: rgba(255, 0, 51, 0.2);
    }

    #inputGrid input {
      border: none;
      outline: none;
      width: 100%;
      height: 100%;
      background: transparent;
      color: #00f0ff;
      text-align: center;
      font-variant-numeric: tabular-nums;
    }

    #inputGrid input:focus {
      background: rgba(0, 240, 255, 0.05);
      box-shadow: inset 0 0 0 1px #00f0ff;
    }

    /* Aggressively Hide Spinners - No longer needed as we use type="text" but keeping a minimal reset just in case */
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    /* Hover effect */
    #inputGrid tr:hover td input {
      background: rgba(255, 0, 51, 0.05);
    }

    /* Sticky header styles update */
    #inputGridContainer th {
      z-index: 10;
    }

    .icon-button {
      @apply p-2 rounded-full text-tron-cyan hover:bg-tron-red/10 hover:text-tron-red transition duration-150;
    }
  </style>

  <!-- Outer container and header -->
  <div class="w-full py-10 px-4 lg:px-12 max-w-7xl mx-auto">
    <header class="mb-10 text-center">
      <h1
        class="text-3xl md:text-4xl font-extrabold text-tron-red mb-2 tracking-wider drop-shadow-[0_0_10px_rgba(255,0,51,0.5)]"
      >
        SPC X-bar & R Control Chart Generator
      </h1>
      <p class="text-lg text-tron-cyan max-w-2xl mx-auto">
        A powerful tool for Statistical Process Control (SPC) analysis using the
        Average (X-bar) and Range (R) methods.
      </p>
    </header>

    <!-- Main Layout Grid -->
    <div class="grid grid-cols-1 gap-8">
      <!-- Data Input and Controls -->
      <div
        class="p-8 bg-tron-dark-200/40 backdrop-blur-sm rounded-xl border border-tron-red/20 shadow-[0_0_15px_rgba(255,0,51,0.1)]"
      >
        <div
          class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6"
        >
          <div>
            <h2 class="text-xl font-bold text-tron-red">Data Entry Grid</h2>
            <p class="text-sm text-tron-cyan/70 mt-1">
              Paste spreadsheet data into the top-left cell or enter manually.
            </p>
          </div>
          <div
            class="mt-4 md:mt-0 flex items-center bg-tron-red/10 px-3 py-1 rounded-full border border-tron-red/30"
          >
            <span class="text-sm font-medium text-tron-cyan mr-2"
              >Subgroup size (n):</span
            >
            <span id="n_val_input" class="font-bold text-tron-red">4</span>
          </div>
        </div>

        <!-- Input Table Container -->
        <div
          id="dataInputContainer"
          class="overflow-x-auto max-h-[400px] border border-tron-red/20 rounded-lg bg-tron-dark-200 mb-4 shadow-inner"
        >
          <table
            id="inputGrid"
            class="w-full whitespace-nowrap table-fixed border-collapse"
          >
            <thead>
              <tr id="inputGridHeader">
                <th
                  class="sticky top-0 bg-tron-dark-200 px-2 py-3 text-center text-xs font-semibold text-tron-red w-[70px] border-b border-tron-red/20 shadow-md z-10"
                  >S.G.</th
                >
              </tr>
            </thead>
            <tbody id="inputGridBody" class="divide-y divide-tron-red/10">
              <!-- Rows will be injected here -->
            </tbody>
          </table>
        </div>

        <!-- Controls -->
        <div class="flex flex-wrap gap-3">
          <button
            onclick="addRow(5)"
            class="flex-1 px-4 py-2.5 bg-tron-dark-200 text-tron-cyan font-medium rounded-lg hover:bg-tron-red/10 hover:text-white transition duration-150 text-sm border border-tron-red/30 shadow-sm"
          >
            +5 Rows
          </button>
          <button
            onclick="addColumn(1)"
            class="flex-1 px-4 py-2.5 bg-tron-dark-200 text-tron-cyan font-medium rounded-lg hover:bg-tron-red/10 hover:text-white transition duration-150 text-sm border border-tron-red/30 shadow-sm"
          >
            +1 Column
          </button>
          <button
            onclick="calculateAndChart()"
            class="w-full md:w-auto md:flex-[2] px-6 py-2.5 bg-tron-red text-black font-bold rounded-lg shadow-[0_0_10px_rgba(255,0,51,0.4)] hover:bg-white hover:text-tron-red focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-tron-red transition duration-150"
          >
            Run Analysis
          </button>
        </div>
      </div>

      <!-- Calculation Summary -->
      <div
        class="p-8 bg-tron-dark-200/40 backdrop-blur-sm rounded-xl border border-tron-red/20 shadow-[0_0_15px_rgba(255,0,51,0.1)]"
      >
        <h2 class="text-xl font-bold text-tron-red mb-6">
          Control Limits & Parameters
        </h2>

        <!-- Control Limits Display -->
        <div
          id="resultsSummary"
          class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8"
        >
          <!-- X-bar Limits -->
          <div
            class="p-5 bg-tron-dark-200 rounded-lg border border-yellow-500/30"
          >
            <h3
              class="font-bold text-lg text-yellow-500 mb-3 flex items-center"
            >
              <span
                class="w-2 h-2 rounded-full bg-yellow-500 mr-2 shadow-[0_0_5px_rgba(234,179,8,0.8)]"
              ></span>
              X-bar Chart Limits
            </h3>
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-tron-cyan/70">Center Line (CL)</span>
                <span id="cl_x_bar" class="font-mono font-medium text-white"
                  >N/A</span
                >
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-tron-cyan/70">Upper Control Limit (UCL)</span>
                <span id="ucl_x_bar" class="font-mono font-medium text-white"
                  >N/A</span
                >
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-tron-cyan/70">Lower Control Limit (LCL)</span>
                <span id="lcl_x_bar" class="font-mono font-medium text-white"
                  >N/A</span
                >
              </div>
            </div>
          </div>

          <!-- Range Chart (R) Limits -->
          <div
            class="p-5 bg-tron-dark-200 rounded-lg border border-purple-500/30"
          >
            <h3
              class="font-bold text-lg text-purple-500 mb-3 flex items-center"
            >
              <span
                class="w-2 h-2 rounded-full bg-purple-500 mr-2 shadow-[0_0_5px_rgba(168,85,247,0.8)]"
              ></span>
              Range Chart (R) Limits
            </h3>
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-tron-cyan/70">Center Line (CL)</span>
                <span id="cl_r" class="font-mono font-medium text-white"
                  >N/A</span
                >
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-tron-cyan/70">Upper Control Limit (UCL)</span>
                <span id="ucl_r" class="font-mono font-medium text-white"
                  >N/A</span
                >
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-tron-cyan/70">Lower Control Limit (LCL)</span>
                <span id="lcl_r" class="font-mono font-medium text-white"
                  >N/A</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Process Parameters -->
        <h3
          class="text-sm font-semibold text-tron-cyan uppercase tracking-wider mb-4"
        >
          Calculated Parameters (n=<span id="n_val">N/A</span>)
        </h3>
        <div
          id="parameterSummary"
          class="grid grid-cols-2 md:grid-cols-4 gap-4"
        >
          <div class="p-3 bg-tron-dark-200 rounded border border-tron-red/20">
            <span class="block text-xs text-tron-cyan/70 mb-1"
              >Grand Avg (X̄̄)</span
            >
            <span
              id="grand_x_bar_val"
              class="block font-mono font-semibold text-white">N/A</span
            >
          </div>
          <div class="p-3 bg-tron-dark-200 rounded border border-tron-red/20">
            <span class="block text-xs text-tron-cyan/70 mb-1"
              >Avg Range (R̄)</span
            >
            <span
              id="average_r_val"
              class="block font-mono font-semibold text-white">N/A</span
            >
          </div>
          <div class="p-3 bg-tron-dark-200 rounded border border-tron-red/20">
            <span class="block text-xs text-tron-cyan/70 mb-1">Constant A2</span
            >
            <span id="a2_val" class="block font-mono font-semibold text-white"
              >N/A</span
            >
          </div>
          <div class="p-3 bg-tron-dark-200 rounded border border-tron-red/20">
            <span class="block text-xs text-tron-cyan/70 mb-1"
              >Constants D3/D4</span
            >
            <div class="flex space-x-2 font-mono font-semibold text-white">
              <span id="d3_val">N/A</span>
              <span class="text-gray-500">/</span>
              <span id="d4_val">N/A</span>
            </div>
          </div>
        </div>

        <div
          id="errorMessages"
          class="mt-6 p-4 hidden bg-red-900/20 border border-red-500 text-red-400 rounded-lg text-sm"
        >
        </div>
      </div>
    </div>

    <!-- Individual Subgroup Data Table Section (Output) -->
    <div id="dataDisplayTable" class="mt-10 overflow-x-auto">
      <!-- Output table will be injected here -->
    </div>

    <!-- Charts Section -->
    <div class="mt-8 space-y-8">
      <!-- X-Bar Chart -->
      <div
        class="p-6 bg-tron-dark-200/40 backdrop-blur-sm rounded-xl border border-tron-red/20 shadow-[0_0_15px_rgba(255,0,51,0.1)]"
      >
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-bold text-tron-red">Average (X-bar) Chart</h2>
          <button
            onclick="downloadChart('xBarChart', 'X_bar_Chart')"
            title="Download Chart"
            class="icon-button"
          >
            <!-- Download Icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
          </button>
        </div>
        <div class="relative h-[300px] md:h-[400px] w-full">
          <canvas id="xBarChart"></canvas>
        </div>
      </div>

      <!-- Range Chart -->
      <div
        class="p-6 bg-tron-dark-200/40 backdrop-blur-sm rounded-xl border border-tron-red/20 shadow-[0_0_15px_rgba(255,0,51,0.1)]"
      >
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-bold text-tron-red">Range (R) Chart</h2>
          <button
            onclick="downloadChart('rChart', 'R_Chart')"
            title="Download Chart"
            class="icon-button"
          >
            <!-- Download Icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
          </button>
        </div>
        <div class="relative h-[300px] md:h-[400px] w-full">
          <canvas id="rChart"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Declare global window functions for TypeScript
  declare global {
    interface Window {
      displayError: (message: string) => void;
      addRow: (count?: number) => void;
      addColumn: (count?: number) => void;
      copyDataTable: () => void;
      downloadChart: (canvasId: string, filename: string) => void;
      calculateAndChart: () => void;
    }
    var Chart: any;
  }

  // IIFE to guarantee scope and immediate execution
  (function () {
    let xBarChartInstance: any = null;
    let rChartInstance: any = null;
    let numRows = 5;
    let numCols = 4;
    let allSubgroupData: Array<{
      rawValues: number[];
      xBar: number;
      range: number;
    }> = [];

    // SPC Constants
    const spcConstants: {
      [key: number]: { A2: number; D3: number; D4: number };
    } = {
      2: { A2: 1.88, D3: 0.0, D4: 3.267 },
      3: { A2: 1.023, D3: 0.0, D4: 2.575 },
      4: { A2: 0.729, D3: 0.0, D4: 2.282 },
      5: { A2: 0.577, D3: 0.0, D4: 2.115 },
      6: { A2: 0.483, D3: 0.0, D4: 2.004 },
      7: { A2: 0.419, D3: 0.076, D4: 1.924 },
      8: { A2: 0.373, D3: 0.136, D4: 1.864 },
      9: { A2: 0.337, D3: 0.184, D4: 1.816 },
      10: { A2: 0.308, D3: 0.223, D4: 1.777 },
    };

    window.displayError = function (message) {
      const errorDiv = document.getElementById("errorMessages");
      if (errorDiv) {
        errorDiv.textContent = message;
        errorDiv.classList.remove("hidden");
      }

      const fields = [
        "cl_x_bar",
        "ucl_x_bar",
        "lcl_x_bar",
        "cl_r",
        "ucl_r",
        "lcl_r",
        "n_val",
        "grand_x_bar_val",
        "average_r_val",
        "a2_val",
        "d3_val",
        "d4_val",
      ];
      fields.forEach((id) => {
        const element = document.getElementById(id);
        if (element) element.textContent = "N/A";
      });
      const dataDisplayTable = document.getElementById("dataDisplayTable");
      if (dataDisplayTable) {
        dataDisplayTable.innerHTML = "";
      }
    };

    window.addRow = function (count = 1) {
      const currentCols = numCols;
      const body = document.getElementById("inputGridBody");
      for (let i = 0; i < count; i++) {
        const newRowIndex = numRows + i;
        const tr = document.createElement("tr");
        tr.className = "hover:bg-tron-red/5 transition-colors duration-150";

        const tdLabel = document.createElement("td");
        tdLabel.className =
          "bg-tron-dark-200 sticky left-0 text-sm text-center border-r border-tron-red/20 text-tron-cyan/70 font-mono py-2";
        tdLabel.textContent = (newRowIndex + 1).toString();
        tr.appendChild(tdLabel);

        for (let j = 0; j < currentCols; j++) {
          const td = document.createElement("td");
          td.className =
            "min-w-[70px] bg-tron-dark-200 border-r border-b border-tron-red/10 p-0";

          const input = document.createElement("input");
          input.type = "text";
          input.inputMode = "decimal";
          // Explicitly setting classes for dark mode
          input.className =
            "data-input-cell text-sm text-tron-cyan w-full h-full bg-transparent border-none focus:outline-none focus:ring-1 focus:ring-tron-cyan py-3 text-center";
          input.id = `input-${newRowIndex}-${j}`;
          input.setAttribute("data-row", String(newRowIndex));
          input.setAttribute("data-col", String(j));

          if (newRowIndex === 0 && j === 0) {
            input.addEventListener("paste", handleSpreadsheetPaste);
          }
          td.appendChild(input);
          tr.appendChild(td);
        }
        if (body) {
          body.appendChild(tr);
        }
      }
      numRows += count;
    };

    window.addColumn = function (count = 1) {
      const body = document.getElementById("inputGridBody");
      const header = document.getElementById("inputGridHeader");
      const currentRows = body ? body.children.length : 0;

      for (let k = 0; k < count; k++) {
        const newColIndex = numCols + k;

        // Update Header
        const th = document.createElement("th");
        th.className =
          "sticky top-0 bg-tron-dark-200 px-2 py-3 text-center text-xs font-semibold text-tron-red min-w-[70px] border-b border-tron-red/20 shadow-md";
        th.textContent = `X${newColIndex + 1}`;
        if (header) {
          header.appendChild(th);
        }

        // Update Rows
        if (body) {
          for (let i = 0; i < currentRows; i++) {
            const tr = body.children[i];
            const td = document.createElement("td");
            td.className =
              "min-w-[70px] bg-tron-dark-200 border-r border-b border-tron-red/10 p-0";

            const input = document.createElement("input");
            input.type = "text";
            input.inputMode = "decimal";
            input.className =
              "data-input-cell text-sm text-tron-cyan w-full h-full bg-transparent border-none focus:outline-none focus:ring-1 focus:ring-tron-cyan py-3 text-center";
            input.id = `input-${i}-${newColIndex}`;
            input.setAttribute("data-row", String(i));
            input.setAttribute("data-col", String(newColIndex));
            td.appendChild(input);
            tr.appendChild(td);
          }
        }
      }
      numCols += count;
      const nValInput = document.getElementById("n_val_input");
      if (nValInput) nValInput.textContent = numCols.toString();
    };

    window.copyDataTable = function () {
      const data = allSubgroupData;
      const copyBtn = document.getElementById("copyDataBtn");

      if (!data || data.length === 0) {
        window.displayError("No data to copy. Please run the analysis first.");
        return;
      }

      const subgroupSize = data[0].rawValues.length;
      let tsvContent = "Subgroup\t";

      // 1. Build Header Row
      for (let i = 1; i <= subgroupSize; i++) {
        tsvContent += `X${i}\t`;
      }
      tsvContent += "X-bar\tRange (R)\n";

      // 2. Build Data Rows
      data.forEach((item, index) => {
        tsvContent += `${index + 1}\t`;

        // Raw values
        for (let i = 0; i < subgroupSize; i++) {
          const val = !isNaN(item.rawValues[i])
            ? item.rawValues[i].toFixed(4)
            : "";
          tsvContent += `${val}\t`;
        }

        // Calculated values
        tsvContent += `${item.xBar.toFixed(4)}\t`;
        tsvContent += `${item.range.toFixed(4)}\n`;
      });

      // 3. Copy to Clipboard
      const textarea = document.createElement("textarea");
      textarea.value = tsvContent.trim();
      document.body.appendChild(textarea);
      textarea.select();

      let success = false;
      try {
        success = document.execCommand("copy");
      } catch (err) {
        console.error("Failed to copy data: ", err);
      }

      document.body.removeChild(textarea);

      // 4. Provide Feedback
      if (success && copyBtn) {
        copyBtn.title = "Copied!";
        copyBtn.classList.add("text-green-600");
        copyBtn.classList.remove("text-indigo-600");

        // Revert button color and title after 2 seconds
        setTimeout(() => {
          copyBtn.title = "Copy Data";
          copyBtn.classList.remove("text-green-600");
          copyBtn.classList.add("text-indigo-600");
        }, 2000);
      } else {
        window.displayError(
          "Failed to copy data to clipboard. Your browser may not support the copy function.",
        );
      }
    };

    window.downloadChart = function (canvasId, filename) {
      const canvas = document.getElementById(
        canvasId,
      ) as HTMLCanvasElement | null;
      if (!canvas) {
        window.displayError(`Chart element with ID ${canvasId} not found.`);
        return;
      }
      const imageURL = canvas.toDataURL("image/png");
      const link = document.createElement("a");
      link.href = imageURL;
      link.download = filename + ".png";
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    };

    window.calculateAndChart = function () {
      try {
        // 1. Clear previous errors and charts
        const errorDiv = document.getElementById("errorMessages");
        if (errorDiv) errorDiv.classList.add("hidden");
        if (xBarChartInstance) xBarChartInstance.destroy();
        if (rChartInstance) rChartInstance.destroy();
        const dataDisplayTable = document.getElementById("dataDisplayTable");
        if (dataDisplayTable) dataDisplayTable.innerHTML = "";
        allSubgroupData = []; // Clear global data array

        const rawSubgroups = [];
        let effectiveNumCols = 0;

        // 2. Read data from the input grid
        for (let i = 0; i < numRows; i++) {
          const subgroup = [];
          let rowHasData = false;
          for (let j = 0; j < numCols; j++) {
            const input = document.getElementById(`input-${i}-${j}`);
            if (input && (input as HTMLInputElement).value !== "") {
              const value = parseFloat((input as HTMLInputElement).value);
              if (!isNaN(value)) {
                subgroup.push(value);
                rowHasData = true;
                effectiveNumCols = Math.max(effectiveNumCols, j + 1);
              }
            }
          }
          if (rowHasData) {
            // Pad the subgroup array up to the determined number of columns for consistency
            while (subgroup.length < effectiveNumCols) {
              subgroup.push(NaN);
            }
            rawSubgroups.push(subgroup);
          }
        }

        // Final validation checks
        const subgroups = rawSubgroups.filter(
          (sg) => sg.length > 0 && !sg.every(isNaN),
        );

        if (subgroups.length < 2) {
          window.displayError(
            "Please enter at least two subgroups with valid data (Subgroups count must be 2 or more).",
          );
          return;
        }

        let subgroupSize = effectiveNumCols;

        // Re-validate that all active subgroups have the same size (excluding NaNs for empty cells)
        const validSubgroups = subgroups.map((sg) =>
          sg.filter((v) => !isNaN(v)),
        );
        subgroupSize = validSubgroups[0].length;

        for (const sg of validSubgroups) {
          if (sg.length !== subgroupSize) {
            window.displayError(
              `Subgroup size mismatch: Please ensure all subgroups have the same number of measurements (n=${subgroupSize}).`,
            );
            return;
          }
        }

        if (subgroupSize < 2 || subgroupSize > 10) {
          window.displayError(
            `Subgroup size (n=${subgroupSize}) is outside the supported range (2-10) for X-bar and R charts.`,
          );
          return;
        }

        // 3. Calculate X-bar and Range for each valid subgroup
        const xBarValues = [];
        const rValues = [];
        const allSubgroupDataTemp = []; // Temporary array

        for (const values of validSubgroups) {
          // Calculate X-bar (Average)
          const sum = values.reduce((a, b) => a + b, 0);
          const xBar = sum / values.length;
          xBarValues.push(xBar);

          // Calculate Range (R)
          const min = Math.min(...values);
          const max = Math.max(...values);
          const range = max - min;
          rValues.push(range);

          allSubgroupDataTemp.push({
            rawValues: values,
            xBar: xBar,
            range: range,
          });
        }

        // Set global data array for copying
        allSubgroupData = allSubgroupDataTemp;

        // 4. Calculate grand averages (Center Lines)
        const grandXBar =
          xBarValues.reduce((a, b) => a + b, 0) / xBarValues.length;
        const averageR = rValues.reduce((a, b) => a + b, 0) / rValues.length;

        // 5. Get SPC Constants
        const constants = spcConstants[subgroupSize];
        const A2 = constants.A2;
        const D3 = constants.D3;
        const D4 = constants.D4;

        // 6. Calculate Control Limits
        const uclXBar = grandXBar + A2 * averageR;
        const lclXBar = grandXBar - A2 * averageR;

        const uclR = D4 * averageR;
        const lclR = D3 * averageR;

        // 7. Prepare Chart Data and Update Summaries
        const numSubgroups = xBarValues.length;
        const labels = Array.from(
          { length: numSubgroups },
          (_, i) => `SG ${i + 1}`,
        );

        const clXBarData = Array(numSubgroups).fill(grandXBar);
        const uclXBarData = Array(numSubgroups).fill(uclXBar);
        const lclXBarData = Array(numSubgroups).fill(lclXBar);

        const clRData = Array(numSubgroups).fill(averageR);
        const uclRData = Array(numSubgroups).fill(uclR);
        const lclRData = Array(numSubgroups).fill(lclR);

