---
// src/layouts/BaseLayout.astro
const { title = "Pablo Lebed – Freelance Analytical Chemist" } = Astro.props;
// No explicit import of global.css here, it's handled by Astro's build system
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <style is:global>
      @import "../styles/global.css";
    </style>
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="545a05e7-69b0-4164-8107-6acb6143d88c"></script>
  </head>
  <body
    class="bg-gray-50 text-gray-700 font-sans antialiased min-h-screen flex flex-col items-center py-8 px-4 sm:px-6 lg:px-8"
  >
    {/* General text color and font-sans */}

    <div
      class="w-full max-w-5xl bg-white rounded-xl shadow-medium overflow-hidden"
    >
      <header class="bg-white shadow-light">
        <div
          class="max-w-6xl mx-auto px-6 py-6 flex items-center justify-between"
        >
          {/* Logo/Name Section */}
          <div>
            <a href="/" class="group block">
              {
                /* Removed default text-gray-900 from group as h1/p will define */
              }
              <h1
                class="text-2xl font-bold leading-tight !my-0 text-primary-blue group-hover:text-primary-blue-dark transition-colors duration-200"
              >
                {/* Set H1 color to primary-blue, primary-blue-dark on hover */}
                Pablo J Lebed
              </h1>
              <p
                class="text-base font-semibold text-gray-700 tracking-wide leading-tight !my-0"
              >
                {/* Keep as gray-700 */}
                Analytical Chemist
              </p>
            </a>
          </div>

          {/* Mobile Menu Toggle */}
          <button
            id="menu-toggle"
            class="md:hidden text-gray-900 focus:outline-none text-3xl leading-none"
          >
            {/* Use gray-900 */}
            ☰
          </button>

          {/* Desktop Navigation */}
          <nav
            id="navbar"
            class="hidden md:flex space-x-8 text-gray-700 font-semibold tracking-wide"
          >
            {/* Use gray-700 */}
            <a
              href="/"
              class="hover:text-primary-blue transition-colors duration-200"
              >Home</a
            >
            {/* Use primary-blue hover */}
            <a
              href="/services"
              class="hover:text-primary-blue transition-colors duration-200"
              >Services</a
            >
            <a
              href="/technical-notes"
              class="hover:text-primary-blue transition-colors duration-200"
              >Technical Notes</a
            >
            <a
              href="/tools"
              class="hover:text-primary-blue transition-colors duration-200"
              >Tools</a
            >
            <a
              href="/about"
              class="hover:text-primary-blue transition-colors duration-200"
              >About</a
            >
            <a
              href="/contact"
              class="hover:text-primary-blue transition-colors duration-200"
              >Contact</a
            >
          </nav>
        </div>

        {/* Mobile Navigation */}
        <div
          id="mobile-nav"
          class="md:hidden hidden px-6 pb-6 space-y-4 text-gray-700 font-semibold tracking-wide"
        >
          <a
            href="/"
            class="block hover:text-primary-blue transition-colors duration-200"
            >Home</a
          >
          <a
            href="/services"
            class="block hover:text-primary-blue transition-colors duration-200"
            >Services</a
          >
          <a
            href="/technical-notes"
            class="block hover:text-primary-blue transition-colors duration-200"
            >Technical Notes</a
          >
          <a
            href="/tools"
            class="block hover:text-primary-blue transition-colors duration-200"
            >Tools</a
          >
          {/* ADDED THIS LINE */}
          <a
            href="/about"
            class="block hover:text-primary-blue transition-colors duration-200"
            >About</a
          >
          <a
            href="/contact"
            class="block hover:text-primary-blue transition-colors duration-200"
            >Contact</a
          >
        </div>
      </header>

      <main class="w-4xl mx-auto px-4 py-6 flex-grow">
        <slot />
      </main>

      <footer
        class="text-sm text-gray-600 py-8 border-t border-gray-200 mt-12 text-center"
      >
        {/* Use gray-600 and gray-200 */}
        © {new Date().getFullYear()} Pablo Lebed. All rights reserved.
      </footer>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("menu-toggle");
        const mobileNav = document.getElementById("mobile-nav");
        if (toggle && mobileNav) {
          toggle.addEventListener("click", () => {
            mobileNav.classList.toggle("hidden");
          });
        }
      });
    </script>
  </body>
</html>
